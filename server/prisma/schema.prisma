generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  username           String
  email              String    @unique
  password           String
  hashedRefreshToken String? // l∆∞u refresh token hash
  avatar             String    @default("https://res.cloudinary.com/dr98sm712/image/upload/v1712373133/guest-user_it2nym.png")
  active             Boolean   @default(false)
  created_at         DateTime  @default(now())
  update_at          DateTime? @updatedAt
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  blogs     Blog[]   @relation("BlogCategories")
}

model Blog {
  id          String     @id @default(uuid())
  title       String     @unique
  content     String
  description String
  thumbnail   String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  categories  Category[] @relation("BlogCategories")
}

model Video {
  id          String     @id @default(uuid())
  title       String     @unique
  description String
  videoUrl    String
  viewers     Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  duration    String
  videoTags   VideoTag[] @relation("VideoTags")
}

model VideoTag {
  id        Int      @id @default(autoincrement())
  tagName   String   @unique
  createdAt DateTime @default(now())
  videos    Video[]  @relation("VideoTags")
}

model LogActivity {
  id          String   @id @default(uuid())
  userId      String?
  action      String
  module      String?
  entityId    String?
  description String?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
}
